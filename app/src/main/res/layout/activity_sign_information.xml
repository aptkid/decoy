<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.match.android.activity.activity_sign_information"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册信息"
        android:textColor="#00AAEE"
        android:textSize="39sp"
        android:gravity="center"
        android:padding="30dp"
        android:id="@+id/textView" />
    <EditText
        android:id="@+id/post_user_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入用户名"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />
    <EditText
        android:id="@+id/post_user_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_below="@+id/post_user_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/post_user_information"
        android:layout_width="match_parent"
        android:textColor="#ddd"
        android:background="#00AAEE"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="立即注册"/>


</RelativeLayout>
